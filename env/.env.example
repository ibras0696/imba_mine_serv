# -------------------------------------------------
# Base port + Forge version (edit before first launch)
# -------------------------------------------------
SERVER_PORT=25565
MC_VERSION=1.20.1
FORGE_VERSION=47.4.10
FORGE_INSTALLER=/data/artifacts/forge-1.20.1-47.4.10-installer.jar

# Supply a CurseForge API key if you want the fetcher to grab mods that are
# missing on Modrinth. Leave empty to skip CurseForge downloads.
CURSEFORGE_API_KEY=

# Memory limits passed to the JVM (valid suffixes: M or G)
MEMORY_MIN=12G
MEMORY_MAX=31G

# Mojang EULA must be TRUE before the server will start
EULA=FALSE

# Friendly settings that end up in server.properties
SERVER_NAME=MyForgeServer
MAX_PLAYERS=10
DIFFICULTY=normal
ONLINE_MODE=TRUE

# Comma separated list of operator nicknames granted on boot
OPS=ibras0696,ibrass

# -------------------------------------------------
# Optional toggles / world parameters
# -------------------------------------------------
LEVEL_NAME=world
VIEW_DISTANCE=10
ALLOW_NETHER=TRUE
ALLOW_FLIGHT=TRUE
PVP=TRUE
ENABLE_COMMAND_BLOCK=FALSE

# Add more settings if needed; anything supported by itzg/minecraft-server can
# be placed here and referenced inside docker-compose.yml.
